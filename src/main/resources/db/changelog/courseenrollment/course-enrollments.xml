<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="CREATE-COURSE-ENROLLMENT" author="ibrahimsolak02">
        <createTable tableName="course_enrollment">
            <column name="course_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="student_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="course_enrollment"
                baseColumnNames="course_id"
                constraintName="fk_course_enrollment_course"
                referencedTableName="course"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="course_enrollment"
                baseColumnNames="student_id"
                constraintName="fk_course_enrollment_student"
                referencedTableName="student"
                referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>